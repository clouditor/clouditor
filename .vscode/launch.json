    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch engine",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/engine",
            "cwd": "${workspaceFolder}",
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch engine (in-memory)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/engine",
            "cwd": "${workspaceFolder}",
            "args": [
                "--db-in-memory"
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch engine (in-memory, dashboard development redirect with Azure discovery)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/engine",
            "cwd": "${workspaceFolder}",
            "args": [
                "--db-in-memory",
                "--dashboard-url=http://localhost:5173",
                "--api-cors-allowed-origins=http://localhost:5173",
                "--discovery-auto-start",
                "--discovery-provider=azure",
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch engine (in-memory, dashboard development redirect with CSAF discovery)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/engine",
            "cwd": "${workspaceFolder}",
            "args": [
                "--db-in-memory",
                "--dashboard-url=http://localhost:5173",
                "--api-cors-allowed-origins=http://localhost:5173",
                "--discovery-auto-start",
                "--discovery-provider=csaf",
                "--discovery-csaf-domain=clouditor.io",
                "--log-level=debug"
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch engine (database, dashboard development redirect with Azure discovery)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/engine",
            "cwd": "${workspaceFolder}",
            "args": [
                "--dashboard-url=http://localhost:5173",
                "--api-cors-allowed-origins=http://localhost:5173",
                "--discovery-auto-start",
                "--discovery-provider=azure"
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch cli (cloud list)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "cloud",
                "list"
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        },
        {
            "name": "Launch cli (login)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "login",
                "localhost:9090"
            ],
            "env": {},
            "preLaunchTask": "go: generate"
        }
    ]
}